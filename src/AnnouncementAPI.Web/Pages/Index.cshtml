@page
@using Microsoft.AspNetCore.Mvc.Localization
@using AnnouncementAPI.Localization
@using Volo.Abp.Users
@model AnnouncementAPI.Web.Pages.IndexModel
@inject IHtmlLocalizer<AnnouncementAPIResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 ">

        <h1>Welcome to the Announcement API</h1>

        <div class="form-group row">
            <div class="col-12">
                <label class="col-form-label">Please Enter your Announcement Title </label>
                <input id="titleInput" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12">
                <label class="col-12 col-form-label">Please Enter your Announcement Content </label>
                <textarea id="contentInput" type="text" class="form-control" rows="5">  </textarea>
            </div>
        </div>


        <button id="sendBtn" type="button" class="btn btn-primary my-3">Send </button>


        <ul id="announcementList" class="list-group list-group-flush text-center">
        </ul>




    </div>

</div>
